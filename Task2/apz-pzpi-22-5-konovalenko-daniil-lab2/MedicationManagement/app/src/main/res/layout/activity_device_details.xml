<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f9f9f9">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/deviceTypeText"
            android:text="@string/device_type"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/deviceLocationText"
            android:text="@string/device_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/deviceParamsText"
            android:text="@string/parameters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/deviceStatusText"
            android:text="@string/device_status"
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/deviceTempText"
            android:text="@string/device_temp_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/deviceHumidityText"
            android:text="@string/device_humidity_range"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/toggleDeviceBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/toggle_device"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#0288D1"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/editDeviceBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FFA000"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/deleteDeviceBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:backgroundTint="#D32F2F"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>