<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/logAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_action"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/logUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_user"
        android:textSize="14sp"
        android:textColor="#555" />

    <TextView
        android:id="@+id/logDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_details"
        android:textSize="13sp"
        android:textColor="#777" />

    <TextView
        android:id="@+id/logTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_timestamp"
        android:textSize="12sp"
        android:textColor="#999" />
</LinearLayout>